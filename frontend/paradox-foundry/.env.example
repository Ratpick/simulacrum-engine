# .env.example

# --- PUBLIC VARIABLES (safe for client-side exposure) ---

# API base URL for fetching public project data, etc.
NEXT_PUBLIC_API_URL=https://api.example.com

# Default language (e.g., 'en', 'fr', 'es', 'ar')
NEXT_PUBLIC_DEFAULT_LANG=en

# Google Analytics or similar (optional)
NEXT_PUBLIC_ANALYTICS_ID=

# Feature flag for experimental features (optional)
NEXT_PUBLIC_EXPERIMENTAL=false

# --- SERVER-ONLY VARIABLES (never expose to client) ---

# Database connection string (for backend/serverless functions)
DATABASE_URL=

# JWT secret for authentication (never share real secret)
JWT_SECRET=

# SMTP credentials for email notifications (optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# --- OTHER COMMON VARIABLES ---

# Node.js environment
NODE_ENV=development

# Base URL of deployed frontend (for canonical links, emails, etc.)
BASE_URL=http://localhost:3000

# Sentry or error reporting key (optional)
SENTRY_DSN=

# --- AI & AGENTIC CONFIGURATION (example) ---
# Claude, OpenAI, Anthropic, Gemini API keys (never share real keys)
CLAUDE_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=

# --- DAO & BLOCKCHAIN (if relevant) ---
# Infura/Alchemy keys, wallet addresses, etc. (optional)
INFURA_API_KEY=
ETH_WALLET_ADDRESS=# .env.example

